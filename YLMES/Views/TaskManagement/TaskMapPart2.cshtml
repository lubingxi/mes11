    <script type="text/javascript">
        $(function () {
            var url = "/TaskManagement/CompleteProcessSetting?tastid=" + '@ViewData["taskid"]';
            $(".click").click(function () {
                $(".tip").fadeIn(200);
            });

            $(".tiptop a").click(function () {
                $(".tip").fadeOut(200);
            });

            $(".sure").click(function () {
                $(".tip").fadeOut(100);
            });

            $(".cancel").click(function () {
                $(".tip").fadeOut(100);
            });

            $("#m1").click(function () {
                window.parent.document.getElementById("rightframe").src = "/TaskManagement/TaskMapPart?TaskID=" + "@Session["task1"]" + "&ProductName=" + "@Session["ProductName1"]" + "&ProductSpec="+"@Session["ProductSpec1"]";
            });
            $("#m1").click(function () {
                window.parent.document.getElementById("rightframe").src = "/TaskManagement/TaskMapPart?TaskID=" + "@Session["task2"]" + "&ProductName=" + "@Session["ProductName2"]" + "&ProductSpec="+"@Session["ProductSpec2"]";
            });
            $("#addC").click(function () {
                //var sd = $("#u").text();
                //window.parent.document.getElementById("rightframe").src = sd;
                alert("功能还没开始!");
            });
            $("#edit").click(function () {
                window.parent.document.getElementById("rightframe").src = "/Home/Eidt";
            });
            $("#BindingProductConfirmation").click(function () {

            });
            $("#ProcessSetup").click(function () {

                $.ajax({
                    url: url,
                    type: 'post',
                    async: true,
                    success: function (data) {
                        if (data == "true") {
                            layer.msg("删除成功", { icon: 6 });
                            table.reload('tw');
                        }
                        if (data == "false") {
                            layer.msg('数据操作异常!', { icon: 5 });
                            return false;
                        }
                    }
                });
            });

            layui.use(['table', 'layer'], function () {
                    var table = layui.table, layer = layui.layer;
                    table.render({
                        elem: '#tw'
                   , url: '/TaskManagement/CheckBOM2?PName=' + '@Session["zi"]'
                   , done: function () {
                     $("tr a").hide()
                     $("tr").hover(function () {

                         $(this).children().last().children().children().toggle();
                     })


                 }
                   , cols: [[
                   , { field: '序号', width: 57, title: '序号' }
                   , { field: '工件编码', width: 200, title: '工件编码' }
                   , { field: '子件编码', width: 200, title: '子件编码',event: 'zi', style: 'color: red' }
                   , {
                       field: '子件数量', width: 100, title: '子件数量'
                     }
                   , { field: '原材料用量', title: '原材料用量', width: 200, edit: Text, style: 'color: #009688' }
                   , { field: '原材料单位', width: 200, title: '原材料单位', edit: Text, style: 'color: #009688' }
                   , { field: '是否组装件', width: 100, title: '是否组装件', templet: '#dd' }
                   , { field: '工艺流程', width: 100, title: '工艺流程',event: 'xi', templet: '#cc' }
                   , { field: 'right', width: 250, align: 'center', toolbar: '#barDemo' }
                   ]]
                    });

                table.on('checkbox(demo)', function (obj) {
                    console.log(obj)
                });

                table.on('tool(demo)', function (obj) {
                    var data = obj.data;
                    if (obj.event === 'xi') {
                        pn = data.子件编码;
                        var url = '/TaskManagement/EditingProcess?PartNumber=' + pn;
                        window.parent.document.getElementById("rightframe").src = url;
                    }
                    if (obj.event === 'zi') {
                        Zi = data.子件编码;
                        window.parent.document.getElementById("rightframe").src = '/TaskManagement/TaskMapPart2?TaskID=' + '@Session["task2"]' + '&ProductName=' + '@Session["ProductName2"]' + '&ProductSpec=' + '@Session["ProductSpec2"]' + '&zi=' + Zi;
                    }
                    switch (obj.event) {
                        case 'add':
                            id = data.子件编码;
                            window.parent.document.getElementById("rightframe").src = '/TaskManagement/TaskMapPart3?TaskID=' + '@Session["task3"]' + '&ProductName=' + '@Session["ProductName3"]' + '&ProductSpec=' + '@Session["ProductSpec3"]';
                            break;
                        case 'Detials':
                            id = data.序号;
                            var url = "/TaskManagement/EditingProcess?id=" + id;
                            layer_show('修改工件', url, '1000', '700');
                            break;
                        case 'delete':
                            layer.confirm('真的删除行么', function (index) {
                                id = data.序号;

                                layer.close(index);
                                var url = "/TaskManagement/DeleteBOM2?id=" + id;
                                $.ajax({
                                    url: url,
                                    type: 'post',
                                    async: true,
                                    success: function (data) {
                                        if (data == "true") {
                                            layer.msg("删除成功", { icon: 6 });
                                            table.reload('tw');
                                        }
                                        if (data == "false") {
                                            layer.msg('数据操作异常!', { icon: 5 });
                                            return false;
                                        }
                                    }
                                });
                            });
                            break;
                        case 'update':
                            id = data.序号;
                            dosage = data.原材料用量;
                            unit = data.原材料单位;
                            var url = "/TaskManagement/UpdateBOM?id=" + id + "&dosage=" + dosage + "&unit=" + unit;
                            $.ajax({
                                url: url,
                                type: 'post',
                                async: true,
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("修改成功", { icon: 6 });
                                        table.reload('tw');
                                    }
                                    if (data == "false") {
                                        layer.msg('用量和单位不能为空！', { icon: 5 });
                                        return false;
                                    }
                                }
                            });                         
                            break;
                        case 'subpp':
                             id = data.子件序号;
                            var url = "/TaskManagement/SubmitPlan?taskid=" + "@Session["quetask2"]" + "&partid=" + id;
                            $.ajax({
                                url: url,
                                type: 'post',
                                async: true,
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("提交成功", { icon: 6 });                                      
                                    }
                                }
                            });  
                            break;
                    };
                });


            });
        })



    </script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" id="edit" lay-event="update">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete" data-type="getCheckLength" id="delete">删除</a>
        @*<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="subpp"  id="subpp">提交到生产部</a>*@
    </script>
