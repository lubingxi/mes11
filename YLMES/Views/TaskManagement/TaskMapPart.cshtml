        <a class="layui-btn layui-btn-xs" id="check" lay-event="check">查看图纸</a>
        <a class="layui-btn layui-btn-xs" id="edit" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-xs" id="yin" lay-event="yin">引用流程</a>
