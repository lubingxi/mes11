    <script type="text/javascript">
        $(document).keydown(function (e) {
            switch (e.keyCode) {
                case 27:
                    window.history.go(-1);
                    break;
            }
        });
        $(function () {
            if ('@Session["name"]' == "") {
                window.top.location = '/Home/Login';
            }
            var url = "/TaskManagement/CompleteProcessSetting?tastid=" + '@ViewData["taskid"]' + '&ContractNumbers=' + '@Session["ContractNumbers"]';
            $("#m1").click(function () {
                window.parent.document.getElementById("rightframe").src = "/TaskManagement/TaskMapPart?TaskID=" + "@Session["task1"]" + "&ProductName=" + "@Session["ProductName1"]" + "&ProductSpec=" + "@Session["ProductSpec2"]";
            });
            $("#CheckBoms").click(function () {

            });
            $("#edit").click(function () {
                window.parent.document.getElementById("rightframe").src = "/Home/Eidt";
            });
            $("#Process").click(function () {

            });
            $("#BindingProductConfirmation").click(function () {

            });
            $("#ProcessSetup").click(function () {
                $.ajax({
                    url: url,
                    type: 'post',
                    async: true,
                    success: function (data) {
                        if (data == "true") {
                            layer.msg("完成工艺成功！", { icon: 6 });
                            window.parent.document.getElementById("rightframe").src = "/TaskManagement/MyTask";
                        }
                        if (data == "false") {
                            layer.msg('还有流程没有添加完,请先添加完成再点击!', { icon: 5 });
                            return false;
                        }
                    }
                });
            });

            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer;
                table.render({
                    elem: '#tw'
               , url: '/TaskManagement/CheckBOM?PSpec=' + '@ViewData["ProductSpec"]' + '&taskid=' + '@Session["task1"]'
               //, done: function () {
               //    $("tr a").hide()
               //    $("tr").hover(function () {
               //        $(this).children().last().children().children().toggle();
               //    })
               //}
               , cols: [[
               , { field: '序号', width: 57, title: '序号' }
               , { field: '工件编码', width: 230, title: '工件编码' }
               , { field: '子件编码', width: 200, title: '子件编码', event: 'zi', style: 'color: red' }
               , {
                   field: '子件数量', width: 100, title: '子件数量'
               }
               , { field: '原材料用量', title: '原材料用量', width: 100, edit: Text, style: 'color: #009688' }            
               , { field: '原材料规格', width: 150, title: '原材料规格', edit: Text, style: 'color: #009688' }
               , { field: '原材料单位', width: 90, title: '原材料单位', edit: Text, style: 'color: #009688' }
               , { field: '是否组装件', width: 100, title: '是否组装件', templet: '#dd' }
               , { field: '工艺流程', width: 250, title: '工艺流程', event: 'xi', templet: '#cc' }
               , { field: 'right', width: 300, align: 'center', toolbar: '#barDemo' }
               ]]

                });
                table.on('tool(demo)', function (obj) {
                    var data = obj.data;
                    if (obj.event === 'xi') {
                        var zj = data.是否组装件;
                        var lc = data.工艺流程;
                        var parid = data.子件序号;
                        //if (lc != null && lc != '添加流程') {
                        //    layer.msg('不能修改')
                        //}
                        //if (zj == 0) {
                        //    //d.工艺流程 = '';
                        //    layer.msg('没有流程!');
                        //}
                        //else {
                            pn = data.子件编码;
                            prn = data.工件编码;
                        spec = data.工件规格;
                       // alert(parid);
                            //var url = '/TaskManagement/EditingProcess?ProductName=' + prn + '&ProductSpec=' + spec + '&PartNumber=' + pn + '&PartId=' + parid;
                            //var index = layer.open({
                            //    type: 2,
                            //    content: url,
                            //    maxmin: true
                            //});
                            //layer.full(index);


                            if (lc == "添加流程") {
                                layer.open({
                                    title: '请输入流程名称',
                                    content: '<html><input type="text" class="Route" style="height:20px;width:300px;"  value="" id="Route" placeholder="请输入" autofocus="autofocus"/></html>',
                                    area: ["300px", "200px"],
                                    btn: ["确定", "取消"],
                                    yes: function (index, layero) {
                                        var Route = $('#Route').val();
                                        layer.close(index);
                                        $.ajax({
                                            url: "/TaskManagement/AddRoute?Route=" + Route,
                                            type: 'post',
                                            async: true,
                                            dataType: "text",
                                            success: function (data) {
                                                if (data == "false") {
                                                    layer.msg('该流程已存在！');
                                                }
                                                else {
                                                    var url = '/TaskManagement/AddProcess?ProductName=' + prn + '&ProductSpec=' + spec + '&PartNumber=' + pn + '&PartId=' + parid + '&Route=' + Route;
                                                    var index = layer.open({
                                                        type: 2,
                                                        content: url,
                                                        maxmin: true,
                                                        end: function () {
                                                            table.reload('tw');
                                                        }
                                                    });
                                                    layer.full(index);
                                                }
                                            }
                                        });
                                    }
                                });
                            }
                            else if (lc == "外购") {
                                layer.msg('外购流程');
                            }
                            else {
                                var url = '/TaskManagement/AddProcess?ProductName=' + prn + '&ProductSpec=' + spec + '&PartNumber=' + pn + '&PartId=' + parid + '&Route=' + lc;
                                var index = layer.open({
                                    type: 2,
                                    content: url,
                                    maxmin: true    
                                });
                                layer.full(index);
                            }
                        }
                            //if (lc == "添加流程") {
                            //    var url = '/TaskManagement/UploadProcess?ProductName=' + prn + '&ProductSpec=' + spec + '&PartNumber=' + pn + '&PartId=' + parid;
                            //    var index = layer.open({
                            //        type: 2,
                            //        content: url,
                            //        maxmin: true
                            //    });
                            //    layer.full(index);
                            //}                       
                    //    }
                    
                    if (obj.event === 'zi') {
                        var parnum = data.子件编码;
                        var pase = data.子件规格;
                        var tid = data.任务编号;
                        var url = '/TaskManagement/TaskMapPart2?TaskID=' + '@Session["task2"]' + '&PartNumber=' + parnum + '&ProductSpec=' + pase + '&taskid=' + tid;
                        var index = layer.open({
                            type: 2,
                            content: url,
                            maxmin: true
                        });
                        layer.full(index);
                    }
                    switch (obj.event) {
                        case 'delete':
                            layer.confirm('真的删除行么', function (index) {
                                id = data.序号;
                                layer.close(index);
                                var url = "/TaskManagement/DeleteBOM?id=" + id;
                                $.ajax({
                                    url: url,
                                    type: 'post',
                                    async: true,
                                    success: function (data) {
                                        if (data == "true") {
                                            layer.msg("删除成功", { icon: 6 });
                                            table.reload('tw');
                                        }
                                        if (data == "false") {
                                            layer.msg('数据操作异常!', { icon: 5 });
                                            return false;
                                        }
                                    }
                                });
                            });
                            break;
                        case 'update':
                            id = data.子件序号;
                            dosage = data.原材料用量;
                            unit = data.原材料单位;
                            var url = "/TaskManagement/UpdateBOM?id=" + id + "&dosage=" + dosage + "&unit=" + unit;
                            $.ajax({
                                url: url,
                                type: 'post',
                                async: true,
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("修改成功", { icon: 6 });
                                        table.reload('tw');
                                    }
                                    if (data == "false") {
                                        layer.msg('用量和单位不能为空！', { icon: 5 });
                                        return false;
                                    }
                                }
                            });
                            break;
                        case 'gou':
                            var id = data.子件序号;
                            var url = "/TaskManagement/ReferProcessAdd?mid=" + id + "&rt="+"外购";
                            $.ajax({
                                url: url,
                                type: 'post',
                                async: true,
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("提交成功", { icon: 6 });
                                        window.history.go(-1);
                                    }
                                }
                            });
                            break;
                        case 'check':
                            var parnum = data.子件编码;
                            var pase = data.子件规格;
                            var marte = data.子件材料;
                            var url = "/TaskManagement/CheckFigure?pnum=" + parnum + "&pesc=" + pase + "&pmater=" + marte;
                            $.ajax({
                                url: url,
                                type: 'post',
                                data: 'text',
                                success: function (data) {
                                    var srcs = "/pdf/" + data;
                                    var url = '/TechnicalDepartment/CheckPdf?src=' + srcs;
                                    var index = layer.open({
                                        type: 2,
                                        title: "PDF",
                                        content: url,
                                        area: ['90%', '90%']
                                    });
                                }
                            });
                            break;
                        case 'yin':
                            var parnum = data.子件序号;
                            var url = '/TaskManagement/ReferProcess?Partid=' + parnum;
                            var index = layer.open({
                                type: 2,
                                content: url,
                                area: ['75%', '60%']
                            });
                            break;
                        case 'edit':
                            var id = data.原材料序号;
                            var mqty = data.原材料用量;
                            var mspec = data.原材料规格;
                            var munits = data.原材料单位;
                            var url = "/TaskManagement/EditProcess";
                            $.ajax({
                                url: url,
                                type: 'post',
                                data: { mqty: mqty, mspec: mspec, munits: munits,id:id},
                                dataType: 'text',                                
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("提交成功", { icon: 6 });
                                        table.reload('tw');
                                    } else if (data == "number") {
                                        layer.msg("请输入数字");
                                    }
                                }
                            });
                            break;
                    };
                });


            });
        })



    </script>
