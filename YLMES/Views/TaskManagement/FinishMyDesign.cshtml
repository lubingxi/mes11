    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script type="text/javascript" src="../../js/jquery.js"></script>
    <script src="~/layui/layui.js" type="text/javascript"></script>


    <script type="text/javascript">
        $(function () {
                if ('@Session["name"]' == "") {
                    window.top.location = '/Home/Login';
                }

            layui.config({
                base: '/layui_exts/',
            }).use(['jquery', 'layer', 'excel', 'table'], function () {
                var $ = layui.jquery;
                var table = layui.table;
                var layer = layui.layer;
                var excel = layui.excel;
                var uploadExcel = function (files) {
                    try {
                        excel.importExcel(files, {
                            // 读取数据的同时梳理数据
                            fields: {
                                'Level': 'A'
                                , 'FigureNumber': 'B'
                                , 'PartNumber': 'C'
                                , 'PartSpec': 'D'
                                , 'PartMaterial': 'E'
                                , 'QTY': 'F'
                                , 'Note': 'G'
                                , 'Type': 'H'
                                ,'WhetherToUpload':'I'
                            }
                        }, function (data) {
                            var datas = [];

                            data[0]["key"].forEach(function (value,index) {
                                if (index > 0) {
                                    value.Level = $.trim(value.Level);
                                    datas.push(value)
                                }
                            })

                            table.render({
                                elem: '#tw'
                                   , toolbar: '#toolbarDemo'
                                   , limit:500
                                     , cols: [[
                                         { field: 'Level', width: 80, title: 'BOM结构', sort: true }
                                , { field: 'FigureNumber', width: 235, title: '图号' }
                                , { field: 'PartNumber', title: '部件名称', width: 180 }
                                , { field: 'PartSpec', width: 180, title: '部件规格' }
                                , { field: 'PartMaterial', width: 150, title: '材料' }
                                , { field: 'QTY', width: 100, title: '数量' }
                                , { field: 'Note', width: 100, title: '备注' }
                                , { field: 'Type', width: 100, title: '类型' }
                                , { field: 'WhetherToUpload', width: 120, title: '是否上传' }
                                     ]]
                                   , data: datas
                            });
                        });
                    } catch (e) {
                    }
                };
                table.on('toolbar(demo)', function (obj) {

                    switch (obj.event) {
                        case 'getCheckData':
                            $.ajax({
                                url: "/TaskManagement/StationImport",
                                data: { datas:  table.cache.tw},
                                type: "post",
                                dataType: "text",
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg('上传成功！');
                                        $('#btn1').show();
                                        $('#btn2').show();
                                        $('#btn3').show();
                                    }
                                }
                            });
                            break;
                    }
                });
                // 监听上传文件的事件
                $('#LAY-excel-import-excel').change(function (e) {
                    var files = e.target.files;
                    uploadExcel(files);
                });

            });

            if ('@ViewData["dao"]' == "2") {
                $('#btn1').show();
                $('#btn2').show();
                $('#btn3').show();
                layui.use(['table', 'layer'], function () {
                    var table = layui.table, layer = layui.layer;
                        table.render({
                            elem: '#tw'
                            , url: '/TaskManagement/CheckBOMD?w='+'@Session["taskid"]'
                            , cols: [[
                                  { field: '部件编号', title: '部件编号', width: 100 }
                                , { field: '部件图号', title: '部件图号', width: 250 }
                                , { field: '部件名称', title: '部件名称', width: 250 }
                                , { field: '部件规格', width: 250, title: '部件规格' }
                                , { field: '部件材料', width: 250, title: '部件材料' }
                                , { field: '上传图片', width: 100, title: '图纸状态',templet: '#tuzhi' }
                                , { field: '是否上传', width: 100, title: '是否上传' }
                             //   , { field: 'right', width: 100, align: 'center', toolbar: '#barDemo' }
                            ]]
                    });
                    table.on('tool(demo)', function (obj) {
                        var data = obj.data;
                        switch (obj.event) {
                            case 'add':
                                tupian = data.上传图片;
                                tuhao = data.图号;
                                var index = layer.open({
                                    type: 2,
                                    anim: 1,
                                    title: '上传图纸',
                                    maxmin: true,
                                    content: '/TaskManagement/UploadTheDrawings?hao=' + tuhao,
                                    cancel: function () {
                                        $("#btn1").click();
                                    }
                                });
                                layer.full(index);
                                break;
                        };
                    });


                });
            }
            else
            {
                $('#btn1').hide();
                $('#btn2').hide();
                $('#btn3').hide();
            }
            $("#btn3").click(function () {
                layui.use(['table', 'layer'], function () {
                    var layer = layui.layer;
                    layer.open({
                        type: 2
                        , area: ['70%', '70%']
                        , title:'上传文件'
                        , content: '/TaskManagement/BatchUpload?taskid='+'@Session["taskid"]'
                        , anim: 2
                    });
                });
            });
            $("#btn2").click(function () {
                $.ajax({
                    url: "/TaskManagement/ConfirmTheDesign",
                    type: "post",
                    dataType: "text",
                    success: function (data) {
                        if (data == "true") {
                            window.setTimeout(function () {
                                alert("确认成功！");
                                window.parent.document.getElementById("rightframe").src = "/TaskManagement/MyTask"
                            }, 500);
                        }
                        else {
                            alert("错误!存在没有上传图纸的图号！");
                            return;
                        }
                    }
                });
            });
            $("#edit").click(function () {
                window.parent.document.getElementById("rightframe").src = "/TaskManagement/NameTask?id=" + '@Session["id"]';
            });
            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer;
                $("#btn1").click(function () {
                    table.render({
                     elem: '#tw'
                    , url: '/TaskManagement/CheckBOMD?w='+'@Session["taskid"]'
                   , cols: [[
                       { field: '部件编号', title: '部件编号', width: 100 }
                   , { field: '部件图号', title: '部件图号', width: 250 }
                   , { field: '部件名称', title: '部件名称', width: 250 }
                   , { field: '部件规格', width: 250, title: '部件规格' }
                   , { field: '部件材料', width: 250, title: '部件材料' }
                   , { field: '上传图片', width: 100, title: '图纸状态', templet: '#tuzhi' }
                   , { field: '是否上传', width: 100, title: '是否上传' }
                 //  , { field: 'right', width: 100, align: 'center', toolbar: '#barDemo' }
                   ]]
                    });
                });
                table.on('checkbox(demo)', function (obj) {
                    console.log(obj)
                });
                table.on('tool(demo)', function (obj) {
                    var data = obj.data;
                    switch (obj.event) {
                        case 'add':
                            tupian = data.上传图片;
                            tuhao = data.部件图号;
                            name = data.部件名称;
                            spec = data.部件规格;
                            partMet = data.部件材料;
                            var index = layer.open({
                                type: 2,
                                anim: 1,
                                title: '上传图纸',
                                maxmin: true,
                                content: '/TaskManagement/UploadTheDrawings?hao=' + tuhao + '&name=' + name + '&spec=' + spec + '&partMet=' + partMet,
                                cancel: function () {
                                    $("#btn1").click();
                                }
                            });
                            layer.full(index);
                            break;
                    };
                });
            });
        })

    </script>
    <script type="text/html" id="barDemo">
        {{#  if(d.是否上传 == '是'){ }}
        <a class="layui-btn layui-btn-xs" id="add" lay-event="add">图纸信息</a>
        {{#  } else { }}
        {{#  } }}
    </script>

