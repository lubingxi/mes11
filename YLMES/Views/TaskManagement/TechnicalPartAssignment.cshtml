    <script type="text/javascript">   
        $(document).keydown(function (e) {
            switch (e.keyCode) {
                case 27:
                    $("#cancle").click();
                    break;
                case 13:
                    $("#sele").click();
                    break;
            }       
        });
        $(function () {
            $(".my-skin .layui-layer-btn2").hide();
            $("#cancle").click(function () {
                window.parent.document.getElementById("rightframe").src = "/TaskManagement/TaskAllocation";
            });
            $("#Dis").click(function () {
                var url = '/TaskManagement/DesignDistribution?ProjectName=' + '@Session["pndd"]';
                layer_show('机械分配查询', url, '1200', '800');
            });
            $("#WorkCondition").click(function () {
                var url = '/TaskManagement/WorkCheck';
                layer_show('工作查询', url, '1400', '850');
            });
           
            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer;
                table.render({
                  elem: '#tw'
                , url: '/TaskManagement/TpA?DistriBution=' + '设计未分配'
                , page: false
                , cols: [[
                 { type: 'checkbox' }
                ,{ field: '任务编号', width: 160, title: '任务编号' }
                ,{ field: '订单产品名称', width: 235, title: '订单产品名称' }
                , { field: '订单产品规格', width: 235, title: '订单产品规格' }
                , { field: '机械任务分配', width: 235, title: '机械任务分配' }
                , { field: '电气任务分配', width: 235, title: '电气任务分配' }
                , { field: '是否拆分', width: 235, title: '是否拆分' }
                ,{ field: 'right', width: 250, align: 'center', toolbar: '#barDemo' }
               ]]
                });   
                $("#MassDistribution").click(function () {
                    layer.open({
                        title: '分配任务',
                        content: 
                           `<label class="layui-form-label">机械设计者:</label>
                           <div class="layui-input-block">
                           <input type="text" name="title" lay-verify="title" autocomplete="off" placeholder="请输入机械设计者" class="layui-input" id="Mechanical">
                           </div>
                            <br/>
                           <label class="layui-form-label">电气设计者:</label>
                           <div class="layui-input-block">
                           <input type="text" name="title" lay-verify="title" autocomplete="off" placeholder="请输入电气设计者" class="layui-input" id="Electrical">
                           </div>
                           <br/>
                           <label class="layui-form-label">审核设计者:</label>
                           <div class="layui-input-block">
                           <input type="text" name="title" lay-verify="title" autocomplete="off" placeholder="请输入审核人" class="layui-input" id="Audit">
                           </div> `,                     
                        area: ["450px", "300px"],
                        btn: ["确定", "取消"],
                        yes: function (index, layero) {
                            var Mechanical = $('#Mechanical').val();
                            var Electrical = $('#Electrical').val();
                            var Audit = $('#Audit').val();
                            var checkStatus = table.checkStatus("tw")
                                , data = checkStatus.data
                            if (data.length >= 1) {
                                for (var i = 0; i < data.length; i++) {
                                    var id = (checkStatus.data[i].任务编号);
                                    $.ajax({
                                        url: "/TaskManagement/MassDistribution",
                                        data: { id: id, mechanical: Mechanical, electrical: Electrical, audit: Audit },
                                        type: "post",
                                        dataType: "text",
                                        success: function (data) {
                                            if (data == "true") {
                                                layer.msg('分配成功!');
                                                table.reload('tw');
                                                layer.closeAll();                                               
                                            }
                                        }
                                    });
                                }
                            }
                        }
                    });
                });
                table.on('tool(demo)', function (obj) {
                    var data = obj.data;
                    switch (obj.event) {
                        case 'Detials':
                            xie = data.机械任务编号;
                            qi = data.电气任务编号;
                            var jixie = null;
                            var kong = '';
                            var dianqi = null;
                            if (xie != null) {
                                jixie = '机械';
                            }
                            else
                            {
                                jixie = '';
                            }
                            if (qi != null) {
                                dianqi = '电气';

                            }
                            else
                            {
                                dianqi = '取消';
                            }
                            layer.confirm('请选择任务分配！', {title:"友力提示",skin:"my-skin",
                                btn: [jixie,kong,dianqi], btn1: function () {
                                    layer.closeAll();
                                    var url = '/TaskManagement/EditingMechanicalTasks?TaskID=' + xie;
                                       layer_show('分配任务',url,'1000', '700');
                                },
                                btn2:function(){
                                    return false;
                                },
                                btn3: function () {
                                    if (dianqi == '电气') {
                                        var url = '/TaskManagement/EditingElectricalTasks?TaskID=' + qi;
                                        layer_show('分配任务', url, '1000', '700');
                                    }else
                                    {                                   
                                    }                                   
                                }
                            });
                            break;

                            case 'copy':
                                layer.confirm("真的要复制这条信息吗？", function (index) {
                                    var id = data.产品编号;
                                    var ContractID = data.合同编号;
                                    var ProductName = data.订单产品名称;
                                    $.ajax({
                                        type: "POST",
                                        url: '/TaskManagement/AddPoDetials?id=' + id + '&cid=' + ContractID + '&pname=' + ProductName,
                                        dataType: "text",
                                        success: function (data) {
                                            if (data == 'true') {
                                                layer.msg('复制成功！');
                                                table.reload('tw');
                                            }                                       
                                        }
                                    });
                                });
                                break;
                        
                            case 'delete':
                                layer.confirm("真的要删除这条信息吗？", function (index) {
                                    var cid = data.合同编号;
                                    var pid = data.产品编号;
                                    $.ajax({
                                        type: "POST",
                                        url: '/TaskManagement/DeletePoDetials?id=' + cid + '&pid=' + pid,
                                        dataType: "text",
                                        success: function (data) {
                                            if (data == 'true') {
                                                layer.msg('删除成功！');
                                                table.reload('tw');
                                            }
                                            else
                                            {
                                                layer.msg('需要重新登录！');
                                            }
                                        }
                                    });
                                });
                                break;

                        case 'submtd':
                            var taskid = data.任务编号;
                            $.ajax({
                                type: "POST",
                                url: '/TaskManagement/SubmitPlans?taskid=' + taskid,
                                dataType: "text",
                                success: function (data) {
                                    if (data == 'true') {
                                        layer.msg('提交成功！');
                                        table.reload('tw');
                                    }
                                    else
                                    {
                                        layer.msg('请联系系统维修人员！');
                                    }
                                }
                            });

                            break;
                    };
                });
            });
            layui.use('table', function () {
                var table = layui.table;                                                                 
                $(".btns").click(function () {
                    var fenpei = $("#s option:selected").text();
                    table.render({
                        elem: '#tw'
                        , url: '/TaskManagement/TpA?DistriBution=' + fenpei
                        , page: false
                        , done: function () {
                            $("tr a").hide();
                            $("tr").hover(function () {
                                $(this).children().last().children().children().toggle();
                            })
                        }
                        , cols: [[
                             { type: 'checkbox' }
                            ,{ field: '任务编号', width: 235, title: '任务编号' }
                            ,{ field: '订单产品名称', width: 235, title: '订单产品名称' }
                            , { field: '订单产品规格', width: 235, title: '订单产品规格' }
                            , { field: '机械任务分配', width: 235, title: '机械任务分配' }
                            , { field: '电气任务分配', width: 235, title: '电气任务分配' }
                            , { field: '是否拆分', width: 235, title: '是否拆分' }
                            , { field: 'right', width: 250, align: 'center', toolbar: '#barDemo' }
                        ]]
                    });
                    table.on('tool(demo)', function (obj) {
                        var data = obj.data;
                        switch (obj.event) {
                            case 'Detials':
                                xie = data.机械任务编号;
                                qi = data.电气任务编号;
                                var jixie = null;
                                var kong = '';
                                var dianqi = null;
                                if (xie != null) {
                                    jixie = '机械';
                                }
                                else {
                                    jixie = '';
                                }
                                if (qi != null) {
                                    dianqi = '电气';

                                }
                                else {
                                    dianqi = '取消';
                                }
                                layer.confirm('请选择任务分配！', {
                                    title: "友力提示", skin: "my-skin",
                                    btn: [jixie, kong, dianqi], btn1: function () {
                                        layer.closeAll();
                                        var url = '/TaskManagement/EditingMechanicalTasks?TaskID=' + xie;
                                        layer_show('分配任务', url, '1000', '700');
                                    },
                                    btn2: function () {
                                        return false;
                                    },
                                    btn3: function () {
                                        if (dianqi == '电气') {
                                            var url = '/TaskManagement/EditingElectricalTasks?TaskID=' + qi;
                                            layer_show('分配任务', url, '1000', '700');
                                        } else {
                                        }
                                    }
                                });
                                break;
                            case 'copy':
                                layer.confirm("真的要复制这条信息吗？", function (index) {
                                    var id = data.产品编号;
                                    var ContractID = data.合同编号;
                                    var ProductName = data.订单产品名称;
                                    $.ajax({
                                        type: "POST",
                                        url: '/TaskManagement/AddPoDetials?id=' + id + '&cid=' + ContractID + '&pname=' + ProductName,
                                        dataType: "text",
                                        success: function (data) {
                                            if (data == 'true') {
                                                layer.msg('复制成功！');
                                                table.reload('tw');
                                            }
                                        }
                                    });
                                });
                                break;

                             case 'delete':
                                layer.confirm("真的要删除这条信息吗？", function (index) {
                                    var cid = data.合同编号;
                                    var pid = data.产品编号;
                                    $.ajax({
                                        type: "POST",
                                        url: '/TaskManagement/DeletePoDetials?id=' + cid + '&pid=' + pid,
                                        dataType: "text",
                                        success: function (data) {
                                            if (data == 'true') {
                                                layer.msg('删除成功！');
                                                table.reload('tw');
                                            }
                                            else {
                                                layer.msg('需要重新登录！');
                                            }
                                        }
                                    });
                                });
                                break;
                            case 'submtd':
                                var taskid = data.任务编号;
                                var pnumber = data.订单产品名称;
                                var pspec = data.订单产品规格;
                                var num = data.数量;        
                                $.ajax({
                                    type: "POST",
                                    url: '/TaskManagement/SubmitPlans?taskid=' + taskid + '&pnum=' + pnumber + '&pspec=' + pspec + '&num=' + num,
                                    dataType: "text",
                                    success: function (data) {
                                        if (data == 'true') {
                                            layer.msg('提交成功！');
                                            table.reload('tw');
                                        }
                                        else {
                                            layer.msg('请联系系统维修人员！');
                                        }
                                    }
                                });

                                break;
                        };
                    });
                });
                
            });
        })
    </script>
    <script type="text/html" id="barDemo">
        {{#  if(d.是否拆分 == '拆分'){ }}
        <a class="layui-btn layui-btn-xs" id="detials" lay-event="Detials">操作</a>
        <a class="layui-btn layui-btn-xs" id="copy" lay-event="copy">复制</a>
        {{#  } else if(d.是否拆分 == '拆分后'){ }}
        <a class="layui-btn layui-btn-xs" id="detials" lay-event="Detials">操作</a>
        <a class="layui-btn layui-btn-xs" id="copy" lay-event="copy">复制</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" id="delete" lay-event="delete">删除</a>
        {{#  } else if(d.订单产品名称 == '路轨' || d.订单产品名称 == '路轨螺丝'){ }}
