        $("#Name").bind("input propertychange", function () {
            var name = $("#Name").val();
            if (name != null) {
                $.ajax({
                    type: "GET",
                    url: '/Rms/VagueUserName',
                    data: { UserName: $("#Name").val() },
                    dataType: "json",
                    success: function (data) {
                        if (data != null) {
                            //alert(data.length);
                            $("#listname >* ").remove();
