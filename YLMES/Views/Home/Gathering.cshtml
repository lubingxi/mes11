            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer, form = layui.form;
  
                    table.render({
                        elem: '#tw'
                   , url: '/Home/Get_Datad?id=' + '@ViewData["Receivables"]'
                   , page: false
                   , limit: 1                
                   , height: 200
                        , cols: [[
                     { field: '', hide: true }
                   , { field: '合同金额', width: 200, title: '合同金额', sort: true }
