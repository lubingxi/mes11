                     field: '收款类型', width: 150, title: '收款类型', templet: '#types'
                 }
                 , { field: '创建人', width: 150, title: '创建人' }
                 , { field: '创建时间', width: 150, title: '创建时间' }
               , { field: 'right', width: 150, align: 'center', toolbar: '#barDemod' }
               ]]

                });
                var twq = null;
                var tws = null;
                form.on('select(tys)', function (data) {
                    twq = data.value;
                });
                table.on('checkbox(demod)', function (obj) {
                    console.log(obj)
                });
                table.on('tool(demod)', function (obj) {
                    var data = obj.data;
                    if (twq == null) {
                        twq = data.收款类型;
                        if (twq == '订单金额') {
                            twq = 1;
                        } else if (ty == '发货前金额') {
                            twq = 2;
                        } else if (ty == '安装前金额') {
                            twq = 3;
                        } else if (ty == '验收金额') {
                            twq = 4;
                        } else if (ty == '质保金额') {
                            twq = 5;
                        }                     
                    }
                    switch (obj.event) {
                        case 'update':
                            id = data.ID;
                            cid = data.ContractID;
                            newd= data.NewAmountCollected;
                            dateRec = data.DateOfReceipt;
                            ticket = data.TicketOpeningAndDate;
                            var cnum = data.合同编号;
                            $.ajax({
                                url: "/Home/XiuShouJilu",
                                type: 'post',
                                async: true,
                                data: { "cid": id, "ContractID": cid, "NewA": newd, "Dtr": dateRec, "Ticket": ticket, "jine": twq },
                                success: function (data) {
                                    if (data == "true") {
                                        layer.msg("修改成功", { icon: 6 });
                                        $.ajax({
                                            url: "/Home/Chane?he=" + cid + "&cnum=" + cnum + "&name=" + localStorage.sitename,
                                            type: "post",
                                            dataType: "text",
                                            success: function (data) {
                                                if (data == "true") {
                                                    layer.msg('收款金额已经足够,已通过可以生产！');
                                                    table.reload('twd');
                                                    table.reload('tw');
                                                }
                                                else {
                                                    layer.msg('订金还不够！');
                                                    table.reload('twd');
                                                    table.reload('tw');
                                                }
                                            }
                                        });
                                        table.reload('twd');
                                        table.reload('tw');
                                    }
                                    if (data == "false") {
                                        layer.msg('数据操作异常!', { icon: 5 });
                                        return false;
                                    }
                                }
                            });                        
                            break;
                        case 'delete':
                            id = data.ID;
                            ContractID = data.ContractID;
                            layer.confirm("真的删除行么", function (index) {
                                $.ajax({
                                    url: "/Home/DeleteShouJiLu",
                                    type: 'post',
                                    async: true,
                                    data: { "id": id, "ContractID": ContractID },
                                    success: function (data) {
                                        if (data == "true") {
                                            layer.msg("删除成功", { icon: 6 });
                                            $.ajax({
                                                url: "/Home/Chane?he=" + ContractID,
                                                type: "post",
