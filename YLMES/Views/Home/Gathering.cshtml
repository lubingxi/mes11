                    var data = obj.data;
                    if (ty == null) {
                        ty = data.收款类型;
                        if (ty == '订单金额') {
                            ty = 1;
                        } else if (ty == '发货前金额') {
                            ty = 2;
                        } else if (ty == '安装前金额') {
                            ty = 3;
                        } else if (ty == '验收金额') {
                            ty = 4;
                        } else if (ty == '质保金额') {
                            ty = 5;
                        }
                    }
                    switch (obj.event) {                    
                        case 'update':
                            id = data.ContractID;
                            var newd = data.NewAmountCollected;
                            var dor = data.DateOfReceipt;
                            var TicketOpeningAndDate = data.TicketOpeningAndDate;
                            var cAmount = data.合同金额;
                            var cnum = data.ContractNumber;
                            var yi = data.已收金额;                         
                            if (ts == null) {
                                ts = data.收款类型;                              
                            }
                            if (ty == 1) {
                                $.ajax({
                                    url: "/Home/AddShouJiLu",
                                    type: 'post',
                                    data: { id: id, NewAmountCollected: newd, DateOfReceipt: dor, TicketOpeningAndDate: TicketOpeningAndDate, shou: ty},
                                    success: function (data) {
                                        if (data == "true") {
                                            window.setTimeout(function () {
                                                layer.msg("添加成功", { icon: 6 });
                                              
                                                $.ajax({
                                                    url: "/Home/Chane?he=" + id + "&cnum=" + cnum + "&name=" + localStorage.sitename,
                                                    type: "post",
                                                    dataType: "text",
                                                    success: function (data) {
                                                        if (data == "true") {
                                                            layer.msg('收款金额已经足够，已通过可以生产！');
                                                            table.reload('twd');
                                                            table.reload('tw');
                                                        }
                                                        else {
                                                            layer.msg('订金还不够！');
                                                            table.reload('twd');
                                                            table.reload('tw');
                                                        }
                                                    }
                                                });
                                            }, 300);
                                        }
                                        if (data == "false") {
                                            layer.msg('数据操作异常!', { icon: 5 });
                                            return false;
                                        }
                                    }
                                });
                            } else
                            {
                                $.ajax({
                                    url: "/Home/AddShouJiLu",
                                    type: 'post',
                                    data: { id: id, NewAmountCollected: newd, DateOfReceipt: dor, TicketOpeningAndDate: TicketOpeningAndDate, shou: ty },
                                    success: function (data) {
                                        if (data == "true") {                                           
                                            layer.msg("添加成功", { icon: 6 });
                                            table.reload('twd');
                                            table.reload('tw');
                                        }
                                        if (data == "false") {
                                            layer.msg('数据操作异常!', { icon: 5 });
                                            return false;
                                        }
                                    }
                                });
                            }                          
                            break;                        
                    };
                });


            });
