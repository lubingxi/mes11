                                                success: function (data) {
                                                    if (data == "true") {
                                                        layer.msg('收款金额已经足够,已通过可以生产！');
                                                        table.reload('twd');
                                                        table.reload('tw');
                                                    }
                                                    else {
                                                        layer.msg('订金还不够！');
                                                        table.reload('twd');
                                                        table.reload('tw');
                                                    }
                                                }
                                            });
                                            table.reload('twd');
                                            table.reload('tw');
                                        }
                                        if (data == "false") {
                                            layer.msg('数据操作异常!', { icon: 5 });
                                            return false;
                                        }
                                    }
                                });
                            });                          
                            break;
                     
                    };
                });           
            });
        })
